block-color ?= primary
alt-color ?= secondary

button, input[type=submit], input[type=reset]
	padding .25em .5em
	border 2px solid transparent
	color-calc block-color
	transition .3s
	outline: 0
	transition .3s
	&:hover
		background-color lighten(block-color, 15%)
	&:active, &:focus
		box-shadow 0 0 0 3px lighten(block-color, 30%)
		color-calc block-color
	&.alternate
		color-calc alt-color
		&:hover
			color-calc lighten(alt-color, 15%)
		&:active, &:focus
			box-shadow 0 0 0 3px lighten(alt-color, 30%)
			color-calc alt-color
	&.text
		color darken(primary, 30%)
		background transparent
		&:hover
			background lighten(alt-color, 80%)
		&:active, &:focus
			color darken(primary, 30%)
			background transparent
			box-shadow 0 0 0 3px lighten(alt-color, 30%)
	&.outline
		color primary
		border 2px solid primary
		background-color transparent
		&:hover
			background primary
			color back
	&.raised
		box-shadow 0 3px 2px -2px rgba(0,0,0,.2), 0 2px 2px 0 rgba(0,0,0,.14), 0 2px 5px 0 rgba(0,0,0,.12)
		&:hover
			box-shadow 0 2px 4px -2px rgba(0,0,0,.2), 0 4px 5px 0 rgba(0,0,0,.14), 0 2px 10px 0 rgba(0,0,0,.12)
		&:active, &:focus
			box-shadow 0 0 0 3px lighten(block-color, 30%)
			