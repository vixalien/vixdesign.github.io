block-color ?= primary
alt-color ?= secondary

dark-check(n)
	if luminosity(n) < 0.2
		&, & > a[href]
			color: rgb(255,255,255) !important
		&::before
			background: url(/img/close-white.svg) center center no-repeat
			background-color: rgba(0,0,0,0.1);

/* Notifs */
.notif
	transition .3s
	width: 100%;
	min-height: 2rem;
	font-size: 1rem;
	font-family: "Philippa";
	text-align: center;
	font-weight: 600;
	display: inline-block;
	background-color: rgb(237, 237, 240);
	border: 2px solid alt-color;
	& > *:not(button) 
		margin: .5rem;
	& > * 
		display: inline-block;
		vertical-align: middle;
	&::before 
		border: 0;
		content: 'x'
		cursor: pointer;
		background: url(/img/close.svg) center center no-repeat;
		background-color: rgba(0,0,0,0.1);
		color: transparent !important;
		float: right;
		width: 2.5em;
		height: 2.5em;
	&.notif-float
		position: fixed;
		bottom: 1rem;
		left: 1rem;
		width: 50vw;
	&[closed] 
		display none
	&::before:hover 
		background-color: rgba(0,0,0,0.2)
		transition: .3s;
	&[hidden]
		width 0
		height 0
		overflow hidden
		opacity 0
.notif-block
	color-calc block-color
	dark-check block-color
.notif-alt
	color-calc alt-color
	dark-check alt-color
.notif-success 
	background-color: rgb(136, 255, 209);
.notif-warning 
	background-color: rgb(255, 234, 128);
.notif-error 
	background-color: rgb(255, 106, 117);
.notif-important 
	background-color: rgb(0, 96, 223);
	dark-check rgb(0, 96, 223);
@media all and (max-width:720px)
	.notif
		&::before
			background-color: transparent
		&.notif-float
			width calc(100% - 2rem)